{
  "name": "timpietrusky.com-keystone",
  "version": "0.0.2",
  "private": true,
  "dependencies": {
    "keystone": "~0.2.19",
    "async": "~0.9.0",
    "underscore": "~1.6.0",
    "dotenv": "0.2.8"
  },


  "devDependencies": {
    "babel-cli": "latest",
    "babel-preset-es2015": "latest",
    "babelify": "latest",
    "browserify": "latest",
    "node-sass": "latest",
    "parallelshell": "latest",
    "uglify-js": "latest",
    "watch": "latest",
    "watchify": "latest",
    "clean-css": "latest"
  },

  "engines": {
    "node": ">=0.10.22",
    "npm": ">=1.3.14"
  },
  
  "scripts": {
    "//" : "Start the server",
    "start": "parallelshell 'node keystone.js' 'npm run watch:css' 'npm run watch:js'",

    "//": "Watch for JS changes",
    "//": "-o 'uglifyjs > public/js/scripts.min.js'",
    "watch:js" : "watchify public/js/src/*.js -o 'uglifyjs > public/js/scripts.min.js' -t [ babelify --presets [ es2015 ] ]",

    "//" : "Watch for SCSS changes",
    "watch:css": "node-sass -w public/css/src/ -o public/css/",


    "//" : "Build everything",
    "build:css": "node-sass public/css/src/styles.scss | cleancss -o public/css/styles.css",

    "build": "npm run build:css"
  },

  "main": "keystone.js"
}
